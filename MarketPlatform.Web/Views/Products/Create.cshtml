                        @Html.EditorFor(model => model.ProductCost, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AmazonSKU, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.AmazonSKU, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.WalmartSKU, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.WalmartSKU, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NeweggSKU, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NeweggSKU, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

            </div>

            <!-- /.box-body -->
            <div class="box-footer">

            </div>

}
            </div>
        </div>
    </div>
</section>


