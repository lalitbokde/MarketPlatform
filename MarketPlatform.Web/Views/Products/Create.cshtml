                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FullDescription, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.FullDescription, new { htmlAttributes = new { @class = "form-control" , @rows = "10", @cols = "80" } })

                        @*<textarea id="FullDescription" name="FullDescription" rows="10" cols="80">
                                           
                    </textarea>*@
